# Database Configuration
DB_HOST=mysql
DB_USER=fileuser
DB_PASSWORD=strong_random_password_here
DB_NAME=file_hider_db

# Email Configuration (for OTP and Notifications)
SMTP_SERVER=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your_email@gmail.com
SMTP_PASSWORD=your_app_specific_password

# Application Security
SECRET_KEY=generate_a_long_random_secret_key_here
ALGORITHM=HS256

# File Storage Paths
UPLOAD_FOLDER=/app/uploads
HIDDEN_FOLDER=/app/hidden

# Optional: Debug Mode
DEBUG=False

# JWT Token Configuration
ACCESS_TOKEN_EXPIRE_MINUTES=30

# Optional: Email Domain Restrictions (if needed)
ALLOWED_EMAIL_DOMAINS=gmail.com,company.com

# Optional: Rate Limiting (for signup, login attempts)
MAX_LOGIN_ATTEMPTS=5
LOGIN_ATTEMPT_RESET_MINUTES=15